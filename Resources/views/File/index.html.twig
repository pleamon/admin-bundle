{% extends 'PAdminBundle:layout:ibox.html.twig' %}
{% trans_default_domain 'PAdminBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content -%}

{% set colors = ['', 'badge-primary', 'badge-info', 'badge-success', 'badge-warning', 'badge-danger'] %}

{% stylesheets filter="cssrewrite"
'@PAdminBundle/Resources/public/css/plugins/dataTables/dataTables.bootstrap.css'
%}
<link rel="stylesheet" type="text/css" href="{{ asset(asset_url) }}" />
{% endstylesheets %}

{% if form.children|length > 2 %}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox collapsed">
            <div class="ibox-title collapse-link">
                <h5>{{ 'query'|trans({}, 'messages') }}</h5>
                <div class="ibox-tools">
                    <i class="fa fa-chevron-up"></i>
                </div>
            </div>
            <div class="ibox-content">
                {{ form(form) }}
            </div>
        </div>
    </div>
</div>
{% endif %}


<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>{{ 'list'|trans({}, 'messages') }}</h5>
                <div class="ibox-tools">
                    <a class="btn btn-outline btn-info" href="{{ path("file_new") }}">{{ 'new'|trans({}, 'messages') }}</a>
                </div>
            </div>
            <div class="ibox-content p-md">
                <div class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>{{ 'file.id'|trans }}</th>
                                    <th>{{ 'file.category'|trans }}</th>
                                    <th>{{ 'file.tags'|trans }}</th>
                                    <th>{{ 'file.filename'|trans }}</th>
                                    <th>{{ 'file.mimetype'|trans }}</th>
                                    <th>{{ 'file.size'|trans }}</th>
                                    <th>{{ 'file.createdAt'|trans }}</th>
                                    <th>{{ 'actions'|trans({}, 'messages') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td><a href="{{ path('file_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td>{{ entity.category.name }}</td>
                                    <td>
                                        {% for tag in entity.tags %}
                                        <span class="label {{ colors[random(5)]}}">{{ tag.name }}</span>
                                        {% endfor %}
                                    </td>
                                    <td>{{ entity.filename }}</td>
                                    <td>{{ entity.mimeType }}</td>
                                    <td>{{ entity.prettySize }}</td>
                                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path("file_modal", {id: entity.id}) }}" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#modal1">
                                                {{ 'show'|trans({}, 'messages') }}
                                            </a>
                                            <a class="btn btn-primary btn-xs" href="{{ path('file_edit', { 'id': entity.id }) }}">
                                                {{ 'edit'|trans({}, 'messages') }}
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {{ tools|raw }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
    </script>
{% endblock %}
