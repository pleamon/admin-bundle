{% extends 'PAdminBundle:layout:ibox.html.twig' %}


{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
{% form_theme delete_form 'bootstrap_3_layout.html.twig' %}

{% block ibox_title -%}{{ 'edit'|trans({}, 'messages') }}{% endblock %}
{% block ibox_tools -%}
<a class="btn btn-outline btn-info" href="{{ path("notification") }}">{{ 'back to list'|trans({}, 'messages') }}</a>
{% endblock %}

{% block ibox_content -%}

{{ form_start(edit_form) }}
<div class="row">
    <div class="col-sm-4">
        {{ form_label(edit_form.category) }}
        {{ form_widget(edit_form.category) }}
    </div>
    <div class="col-sm-4">
        {{ form_label(edit_form.level) }}
        {{ form_widget(edit_form.level) }}
    </div>
    <div class="col-sm-4">
        {{ form_label(edit_form.status) }}
        {{ form_widget(edit_form.status) }}
    </div>
</div>
{{ form_end(edit_form) }}

    {{ form(delete_form, {attr: {style:"display: inline-block;", "class": "delete-action"}}) }}
{% endblock %}
