<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}title{% endblock %}</title>

    {% stylesheets filter="cssrewrite"
        '@PAdminBundle/Resources/public/css/bootstrap.min.css'
        '@PAdminBundle/Resources/public/font-awesome/css/font-awesome.css'
        '@PAdminBundle/Resources/public/css/plugins/iCheck/custom.css'
        '@PAdminBundle/Resources/public/css/animate.css'
        '@PAdminBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" type="text/css" href="{{ asset(asset_url) }}" />
    {% endstylesheets %}
</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">{% block logo_name %}PAD{% endblock %}</h1>
            </div>
            {% block form_header %}
            {% endblock %}

            <span class="text-danger">
                {% block form_error %}
                {% endblock %}
            </span>

            <form class="m-t" method="post" role="form" action="{% block form_action %}{% endblock %}">
                {% block form_body %}
                {% endblock %}
            </form>
            {% block form_footer %}
            <p class="m-t"> <small> Inspinia we app framework base on Bootstrap 3 &copy; 2014 </small> </p>
            {% endblock %}
        </div>
    </div>

    <!-- Mainly scripts -->
    {% javascripts
        '@PAdminBundle/Resources/public/js/jquery-2.1.1.js'
        '@PAdminBundle/Resources/public/js/bootstrap.min.js'
        '@PAdminBundle/Resources/public/js/plugins/iCheck/icheck.min.js'
    %}
    <script type="text/javascript" src="{{ asset(asset_url) }}"></script>
    {% endjavascripts %}
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>

</body>
</html>
