{% extends 'PAdminBundle:Security:base.html.twig' %}
{% trans_default_domain 'PUserBundle' %}

{% block form_header %}
{{ parent() }}
<h3>{{ 'security.login.text'|trans }}</h3>
{% endblock %}

{% block title %}登录{% endblock %}

{% block form_title %}登录{% endblock %}

{% block form_action %}{{ path("fos_user_security_check") }}{% endblock %}

{% block form_error %}
    {% if error %}
        {{ error.messageKey|trans(error.messageData, 'PUserBundle') }}
    {% endif %}
{% endblock %}

{% block form_body %}
<div class="form-group">
    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}" />
</div>
<div class="form-group">
    <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}" />
</div>
<div class="form-group text-left">
    <label for="remember_me">
        <input type="checkbox" class="i-checks" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
    </label>
</div>

<button type="submit" class="btn btn-primary block full-width m-b">{{ 'security.login.submit'|trans }}</button>

<a href="{{ path("fos_user_resetting_request") }}"><small>{{ 'security.login.forgot_password'|trans }}</small></a>
{% if padmin.getParameter('p.user.register.enabled') %}
<p class="text-muted text-center"><small>{{ 'security.not account' }}?</small></p>
<a class="btn btn-sm btn-white btn-block" href="{{ path('fos_user_registration_register') }}">创建账户</a>
{% endif %}
{% endblock %}
