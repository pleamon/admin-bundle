{% extends 'PAdminBundle:layout:ibox.html.twig' %}
{% trans_default_domain 'PAdminBundle' %}

{% block page_heading %}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>公告</h2>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path("article") }}">公告列表</a>
            </li>
            <li>
                <a href="{{ path("article") }}">{{ entity.category }}</a>
            </li>
            <li class="active">
                <strong>Article</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
{% endblock %}


{% block content -%}
<div class="wrapper wrapper-content  animated fadeInRight article">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="pull-right">
                        <button class="btn btn-white btn-xs" type="button">{{ entity.user }}</button>
                    </div>
                    <div class="text-center article-title">
                        <span class="text-muted"><i class="fa fa-clock-o"></i> {{ entity.createdAt|date('Y-m-d H:i:s') }}</span>
                        <h1>
                            {{ entity.title }}
                        </h1>
                    </div>
                    {{ entity.content|raw }}
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Tags:</h5>
                            {% for tag in entity.tags %}
                            <button class="btn btn-primary btn-xs" type="button">{{ tag.name }}</button>
                            {% endfor %}
                        </div>
                        <div class="col-md-6">
                            <div class="small text-right">
                                <h5>Stats:</h5>
                                <i class="fa fa-eye"> </i> {{ entity.readCount}} views
                            </div>
                        </div>
                    </div>
                    {% if entity.comments|length > 0 %}
                    <div class="row">
                        <div class="col-lg-12">
                            <h2>Comments:</h2>
                            {% for comment in entity.comments %}
                            <div class="social-feed-box">
                                <div class="social-avatar">
                                    {#
                                    <a href="" class="pull-left">
                                        <img alt="image" src="img/a1.jpg">
                                    </a>
                                    #}
                                    <div class="media-body">
                                        <a href="#">
                                            {{ comment.user.username }}
                                        </a>
                                        <small class="text-muted">{{ comment.createdAt|date('Y-m-d H:i:s') }}</small>
                                    </div>
                                </div>
                                <div class="social-body">
                                    <p>
                                    {{ comment.content }}
                                    </p>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

